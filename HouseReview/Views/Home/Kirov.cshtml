    <div class="row justify-content-md-center p-4">
        <div class="col-md-auto">
            <h4>Добавить комментарий для района: </h4>
        </div>
        <div class="col-md-auto">
            <form asp-controller="Comment" asp-action="Create">
                <input type="submit" name="Adress" value="Кировский" class="btn btn-primary" />
            </form>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="text-primary">Список комментариев</h2>
            </div>
        </div>
        <br /> <br />
        @if (Model.Count() > 0)
        {
    <table class="table table-bordered table-striped" style="width:100%">

    <thread>
        <tr>
            <th>
                Комментарий
            </th>
            <th>
                Дата создания
            </th>
            <th>
                Район
            </th>
            <th>
                Пользователь
            </th>

            <th>
                Оценка
            </th>
        </tr>
    </thread>
    <tbody>
        @foreach (var obj in Model)
        {
<tr>
    <td width:75%>@obj.Text</td>
    <td width:15%>@obj.CreationTime</td>
    <td width:10%>@obj.Adress</td>
    <td width:10%>@obj.UserName</td>
    <td width:10%>@obj.Grade</td>
</tr>}
    </tbody>
</table> }
else
{
<p>По данному району пока нет комментариев</p>}
    </div>


</body>
