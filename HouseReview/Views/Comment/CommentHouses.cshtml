@model IEnumerable<HouseReview.Models.Comment>
@{
    ViewData["Title"] = "База зданий";
}

<div class = "container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class = "text-primary">Список комментариев</h2>
        </div>
    </div>
    <br /> <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style ="width:100%">
        
            <thread>
                <tr>
                    <th>
                        Комментарий
                    </th>
                    <th>
                        Дата создания
                    </th>
                    <th>
                        Адрес
                    </th>
                    <th>
                        Пользователь
                    </th>

                    <th>
                        Оценка
                    </th>
                </tr>
            </thread>
            <tbody>
                @foreach(var obj in Model)
                {
                       <tr>
                           <td width:75%>@obj.Text</td>
                           <td width:15%>@obj.CreationTime</td>
                           <td width:10%>@obj.Adress</td>
                           <td width:10%>@obj.UserName</td>
                           <td width:10%>@obj.Grade</td>
                       </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> Пока нет комментариев</p>
    }
</div>

